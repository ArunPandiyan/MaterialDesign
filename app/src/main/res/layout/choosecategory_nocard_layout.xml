<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:fitsSystemWindows="true"-->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>
    <!--<include-->
    <!--android:id="@+id/toolbar"-->
    <!--layout="@layout/toolbar" />-->

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/ripple"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/kn_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_not_selected"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/knownledge_area_img"
                        android:layout_width="fill_parent"
                        android:layout_height="180dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/study_mode" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/knownledge_area_img">

                        <Spinner
                            android:id="@+id/spinner_knowledge_area"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/knownledge_area_img"
                            android:layout_weight="0.9"/>

                        <ImageView
                            android:id="@+id/tick_knowledge_area"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/knownledge_area_img"
                            android:layout_toRightOf="@+id/spinner_knowledge_area"
                            android:src="@drawable/ic_tick" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/selected_knowledge_area"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner_knowledge_area"
                        android:layout_marginLeft="15dp"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:text="Selected area"
                        android:textAppearance="?android:attr/textAppearanceLarge" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/proces_grp_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_not_selected"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/process_group_img"
                        android:layout_width="fill_parent"
                        android:layout_height="180dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/process_group" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/process_group_img">

                    <Spinner
                        android:id="@+id/spinner_process_group"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/process_group_img"
                        android:layout_weight="0.9"/>

                    <ImageView
                        android:id="@+id/tick_process_group"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/process_group_img"
                        android:layout_toRightOf="@+id/spinner_process_group"
                        android:src="@drawable/ic_tick" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/selected_process_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner_process_group"
                        android:layout_marginLeft="15dp"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:text="Selected area"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/process_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_not_selected"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/process_img"
                        android:layout_width="fill_parent"
                        android:layout_height="180dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/process" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/process_img">

                    <Spinner
                        android:id="@+id/spinner_process"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/process_img"
                        android:layout_weight="0.9"/>

                    <ImageView
                        android:id="@+id/tick_process"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/process_img"
                        android:layout_toRightOf="@+id/spinner_process"
                        android:src="@drawable/ic_tick" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/selected_process"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner_process"
                        android:layout_marginLeft="15dp"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:text="Selected area"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/difficult_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Difficulty Level"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/difficulty_level"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/process_img"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--app:layout_anchor="@id/tool_bar"-->
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/FabStyle"
        android:layout_margin="16dp"
        app:layout_anchor="@id/scroll"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>